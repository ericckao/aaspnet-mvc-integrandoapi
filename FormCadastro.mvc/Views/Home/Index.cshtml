@{
    ViewData["Title"] = "Tela de Cadastro";
}

<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Junte-se a comunidade</h3>
                    <p>Preencha os dados abaixo.</p>
                    <form class="requires-validation" novalidate>

                        <!-- NOME COMPLETO-->
                        <div class="col-md-12">
                            <input class="form-control" type="text" name="nome" placeholder="Nome Completo" required>
                        </div>

                        <!-- EMAIL-->
                        <div class="col-md-12">
                            <input class="form-control" type="email" name="email" placeholder="E-mail" required>
                        </div>

                        <!-- GÊNERO  -->
                        <div class="col-md-12 mt-3">
                            <label class="mb-3 mr-1" for="gender">Gênero: </label>

                            <input type="radio" class="btn-check" name="gender" id="male" autocomplete="off" required>
                            <label class="btn btn-sm btn-outline-secondary" for="male">Masculino</label>

                            <input type="radio" class="btn-check" name="gender" id="female" autocomplete="off" required>
                            <label class="btn btn-sm btn-outline-secondary" for="female">Feminino</label>

                            <input type="radio" class="btn-check" name="gender" id="secret" autocomplete="off" required>
                            <label class="btn btn-sm btn-outline-secondary" for="secret">Prefiro não informar</label>
                            <div class="valid-feedback mv-up">You selected a gender!</div>
                            <div class="invalid-feedback mv-up">Please select a gender!</div>
                        </div>


                        <!-- Endereço-->
                        <div class="cep-estado">
                            <input class="form-cep" maxlength="8" pattern="[0-9]{5}-[0-9]{3}" title="Formato de CEP inválido. Use o formato: 12345-678" required placeholder="CEP">
                            <input class="form-estado" required placeholder="Estado">
                        </div>

                        <div class="form-endereco">
                            <input class="form-control" required placeholder="Endereço">
                        </div>

                        <div class="form-complemento">
                            <input class="form-comp" placeholder="Complemento">
                            <input class="form-bairro" required placeholder="Bairro">
                        </div>

                        <!--  VALIDAR DADOS ANTES DE ENVIAR -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                            <label class="form-check-label">Confirmo que as informações estão corretas</label>
                        </div>


                        <div class="form-button mt-3">
                            <button id="submit" type="submit" class="btn btn-primary">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

